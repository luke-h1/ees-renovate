{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":preserveSemverRanges",
    ":rebaseStalePrs",
    ":semanticCommits"
  ],

  "lockFileMaintenance": {
    "commitMessageAction": "Update",
    "extends": ["group:all"],
    "separateMajorMinor": false
  },
  "dependencyDashboard": true,
  "timezone": "Europe/London",
  "addLabels": ["renovate"],
  "azure-pipelines": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "groupName": "renovate",
    "dependencyDashboardApproval": false,
    "minimumReleaseAge": "0d",
    "rangeStrategy": "update-lockfile",
    "commitMessageSuffix": "[SECURITY]",
    "branchTopic": "{{{datasource}}}-{{{depName}}}-vulnerability",
    "prCreation": "immediate"
  },
  "packageRules": [
    {
      "groupName": "All frontend minor dependencies",
      "matchUpdateTypes": ["minor"],
      "matchFiles": [
        "package.json",
        "src/explore-education-statistics-admin",
        "src/explore-education-statistics-ckeditor",
        "src/explore-education-statistics-common",
        "src/explore-education-statistics-frontend"
      ],
      "labels": ["minor dependencies"]
    },
    {
      "groupName": "All frontend major dependencies",
      "matchUpdateTypes": ["major"],
      "labels": ["major dependencies"],
      "matchFiles": [
        "package.json",
        "src/explore-education-statistics-admin",
        "src/explore-education-statistics-ckeditor",
        "src/explore-education-statistics-common",
        "src/explore-education-statistics-frontend"
      ]
    },
    {
      "matchManagers": ["pipenv", "pyenv"],
      "groupSlug": "python",
      "groupName": "Python dependencies",
      "description": "Python dependencies",
      "matchUpdateTypes": ["minor", "major"]
    }
  ]
}
