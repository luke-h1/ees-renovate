{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ignorePaths": ["useful-scripts/**"],
  "extends": [
    "config:base",
    ":separateMultipleMajorReleases",
    ":separatePatchReleases",
    ":preserveSemverRanges",
    ":rebaseStalePrs",
    ":semanticCommits",
    "group:react",
    "group:dotnetMonorepo"
  ],
  "timezone": "Europe/London",
  "azure-pipelines": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "groupName": "renovate",
    "dependencyDashboardApproval": false,
    "minimumReleaseAge": "0d",
    "rangeStrategy": "update-lockfile",
    "commitMessageSuffix": "[SECURITY]",
    "branchTopic": "{{{datasource}}}-{{{depName}}}-vulnerability",
    "prCreation": "immediate"
  },
  // group all frontend packages (explore-education-statistics-*) into one single PR
  "packageRules": [
    {
      "matchPackageNames": ["explore-education-statistics-*"],
      "groupName": "frontend",
      "groupSlug": "explore-education-statistics",
      "groupDescription": "Frontend packages"
      
    }
  ]
}
