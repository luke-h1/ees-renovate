{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":separateMultipleMajorReleases",
    ":separatePatchReleases",
    ":preserveSemverRanges",
    ":rebaseStalePrs",
    "group:allNonMajor",
    ":semanticCommits"
  ],
  
  "lockFileMaintenance": {
    "commitMessageAction": "Update",
    "extends": ["group:all"],
    "separateMajorMinor": false
  },
  "dependencyDashboard": true,
  "timezone": "Europe/London",
  "addLabels": ["renovate"],
  "azure-pipelines": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "groupName": "renovate",
    "dependencyDashboardApproval": false,
    "minimumReleaseAge": "0d",
    "rangeStrategy": "update-lockfile",
    "commitMessageSuffix": "[SECURITY]",
    "branchTopic": "{{{datasource}}}-{{{depName}}}-vulnerability",
    "prCreation": "immediate"
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "rangeStrategy": "replace"
    },
    {
      "matchPackageNames": ["@ckeditor"],
      "enabled": false
    },
    {
      "matchDatasources": ["azure-pipelines-tasks"],
      "extractVersion": "^(?<version>\\d+)",
      "description": "Azure Pipelines Tasks"
    },
    {
      "matchManagers": ["nuget"],
      "matchFiles": ["\\.csproj$"],
      "groupSlug": "dotnet",
      "groupName": "Backend non-major dependencies",
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "matchManagers": ["nuget"],
      "matchFiles": ["\\.csproj$"],
      "groupSlug": "dotnet",
      "groupName": "Backend major dependencies",
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "matchManagers": ["pipenv", "pyenv"],
      "groupSlug": "python",
      "groupName": "Python dependencies",
      "description": "Python dependencies",
      "matchUpdateTypes": [
        "minor",
        "major"
      ]
    },
    {
      "matchManagers": ["npm"],
      "groupSlug": "frontend",
      "groupName": "Frontend minor dependencies",
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "matchManagers": ["npm"],
      "groupSlug": "frontend",
      "groupName": "Frontend dependencies",
      "description": "Frontend major dependencies",
      "matchUpdateTypes": [
        "major"
      ]
    }
  ]
}
