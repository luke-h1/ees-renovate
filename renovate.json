{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":separateMultipleMajorReleases",
    ":preserveSemverRanges",
    ":rebaseStalePrs",
    "group:allNonMajor",
    ":semanticCommits"
  ],
  "lockFileMaintenance": {
    "commitMessageAction": "Update",
    "extends": ["group:all"],
    "separateMajorMinor": false
  },
  "dependencyDashboard": true,
  "timezone": "Europe/London",
  "addLabels": ["renovate"],
  "azure-pipelines": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "groupName": "renovate",
    "schedule": [],
    "dependencyDashboardApproval": false,
    "minimumReleaseAge": "0d",
    "rangeStrategy": "update-lockfile",
    "commitMessageSuffix": "[SECURITY]",
    "branchTopic": "{{{datasource}}}-{{{depName}}}-vulnerability",
    "prCreation": "immediate"
  },
  "packageRules": [
    {
      "matchPackageNames": ["@ckeditor"],
      "enabled": false
    },
    {
      "matchDatasources": ["azure-pipelines-tasks"],
      "extractVersion": "^(?<version>\\d+)",
      "description": "Azure Pipelines Tasks"
    },
    {
      "matchManagers": ["nuget"],
      "matchFiles": ["\\.csproj$"],
      "groupSlug": "dotnet",
      "groupName": "Backend dependencies",
      "description": "C# dependencies"
    },
    {
      "matchManagers": ["pipenv", "pyenv"],
      "groupSlug": "python",
      "groupName": "Python dependencies",
      "description": "Python dependencies"
    },
    {
      "matchManagers": ["npm"],
      "groupSlug": "frontend",
      "groupName": "Frontend dependencies",
      "description": "Frontend dependencies"
    }
  ]
}
