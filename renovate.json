{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":separateMultipleMajorReleases",
    ":separatePatchReleases",
    ":preserveSemverRanges",
    ":rebaseStalePrs",
    "group:allNonMajor",
    ":semanticCommits"
  ],
  
  "lockFileMaintenance": {
    "commitMessageAction": "Update",
    "extends": ["group:all"],
    "separateMajorMinor": false
  },
  "dependencyDashboard": true,
  "timezone": "Europe/London",
  "addLabels": ["renovate"],
  "azure-pipelines": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "groupName": "renovate",
    "dependencyDashboardApproval": false,
    "minimumReleaseAge": "0d",
    "rangeStrategy": "update-lockfile",
    "commitMessageSuffix": "[SECURITY]",
    "branchTopic": "{{{datasource}}}-{{{depName}}}-vulnerability",
    "prCreation": "immediate"
  },
  "packageRules": [
    {
      "groupName": "Admin minor dependencies",
      "matchUpdateTypes": ["minor"],
      "matchFiles": ["src/explore-education-statistics-admin/package.json"]
    },
    {
      "groupName": "Admin major dependencies",
      "matchUpdateTypes": ["major"],
      "matchFiles": ["src/explore-education-statistics-admin/package.json"]
    },
    {
      "groupName": "common minor dependencies",
      "matchUpdateTypes": ["minor"],
      "matchFiles": ["src/explore-education-statistics-common/package.json"]
    },
    {
      "groupName": "common major dependencies",
      "matchUpdateTypes": ["major"],
      "matchFiles": ["src/explore-education-statistics-common/package.json"]
    },
    {
      "groupName": "ckeditor minor dependencies",
      "matchUpdateTypes": ["minor"],
      "matchFiles": ["src/explore-education-statistics-ckeditor/package.json"]
    },
    {
      "groupName": "ckeditor major dependencies",
      "matchUpdateTypes": ["major"],
      "matchFiles": ["src/explore-education-statistics-ckeditor/package.json"]
    },
    {
      "groupName": "frontend minor dependencies",
      "matchUpdateTypes": ["minor"],
      "matchFiles": ["src/explore-education-statistics-frontend/package.json"]
    },
    {
      "groupName": "frontend major dependencies",
      "matchUpdateTypes": ["major"],
      "matchFiles": ["src/explore-education-statistics-frontend/package.json"]
    },
    {
      "matchManagers": ["pipenv", "pyenv"],
      "groupSlug": "python",
      "groupName": "Python dependencies",
      "description": "Python dependencies",
      "matchUpdateTypes": [
        "minor",
        "major"
      ]
    }
  ]
}
